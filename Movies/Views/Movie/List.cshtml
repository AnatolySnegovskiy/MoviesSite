
@using Movies.Domain.Entities

@{
    ViewBag.Title = "Фильмы";
}

@foreach (var p in @Model.Movies)
{
    <div>
        <h3>@p.Name</h3>
        <p>@p.Description</p>
        <h4>@p.Link</h4>
    </div>
}

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
</div>
